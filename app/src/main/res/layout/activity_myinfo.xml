<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    tools:context=".MyinfoActivity">


    <FrameLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Button_profileCH_myinfo"
            android:layout_width="96dp"
            android:layout_height="34dp"
            android:layout_gravity="bottom|left"
            android:fontFamily="@font/jalnan"
            android:text="수정"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="100dp"
            android:fontFamily="@font/jalnan"
            android:text="ID님"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/EditText_info_number"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            android:fontFamily="@font/jalnan"
            android:hint="전화번호"
            android:textColor="@color/black"
            android:textColorHint="#d9d9d9"
            android:textSize="12dp" />

        <Button
            android:id="@+id/button_number_set"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_gravity="center|right"
            android:fontFamily="@font/jalnan"
            android:text="수정"
            android:textSize="10dp" />

        <Button
            android:id="@+id/button_nickname_set"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_gravity="bottom|right"
            android:fontFamily="@font/jalnan"
            android:text="수정"
            android:textSize="10dp" />

        <Button
            android:id="@+id/button_nickname_check"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="70dp"
            android:fontFamily="@font/jalnan"
            android:text="중복확인"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/EditText_info_nickname"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100dp"
            android:fontFamily="@font/jalnan"
            android:hint="닉네임 수정"
            android:textColor="@color/black"
            android:textColorHint="#d9d9d9"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/ImageView_profile_myinfo"
            android:layout_width="84dp"
            android:layout_height="111dp"
            android:layout_marginLeft="5dp"
            tools:srcCompat="@tools:sample/avatars" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="#d9d9d9"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:text="나의 후기"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView_myinfo"
        android:layout_width="match_parent"
        android:layout_height="526dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>