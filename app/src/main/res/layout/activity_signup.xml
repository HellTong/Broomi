<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    tools:context=".SignupActivity">


    <EditText
        android:id="@+id/editText_Email_signup"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/jalnan"
        android:textSize="16dp"
        android:hint="Email형식으로 입력해주세요."
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageView_profile_signup" />

    <EditText
        android:id="@+id/EditText_PW_signup"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/jalnan"
        android:textSize="16dp"
        android:hint="비밀번호를 입력해주세요."
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Email_signup" />


    <EditText
        android:id="@+id/EditText_Number_signup"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:fontFamily="@font/jalnan"
        android:textSize="16dp"
        android:hint="전화번호를 입력해주세요"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditText_PW_signup" />

    <EditText
        android:id="@+id/EditText_Nickname_signup"
        android:layout_width="235dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:fontFamily="@font/jalnan"
        android:hint="닉네임을 입력해주세요"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditText_Number_signup" />

    <Button
        android:id="@+id/Button_signup_signup"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="회원가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditText_Nickname_signup"
        app:layout_constraintVertical_bias="0.362" />

    <TextView
        android:layout_width="203dp"
        android:layout_height="23dp"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:text="프로필 사진"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/ImageView_profile_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ImageView_profile_signup"
        android:layout_width="274dp"
        android:layout_height="194dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/broomi2" />

    <Button
        android:id="@+id/Button_signup_nickname_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="중복확인"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/EditText_Nickname_signup"
        app:layout_constraintStart_toEndOf="@+id/EditText_Nickname_signup" />


</androidx.constraintlayout.widget.ConstraintLayout>