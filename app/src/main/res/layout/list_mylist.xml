<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageVIew_profile_mylist"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:src="@drawable/broomi2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_mylist_userID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/jalnan"
                android:textColor="@color/black"
                android:text="아이디" />

            <TextView
                android:id="@+id/textView_mylist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/jalnan"
                android:textColor="@color/black"
                android:text="제목"
                />

            <TextView
                android:id="@+id/textView_mylist_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/jalnan"
                android:textColor="@color/black"
                android:text="보수" />

            <TextView
                android:id="@+id/textView_mylist_write"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                android:visibility="invisible" />

            <Button
                android:id="@+id/Button_delete_mylist"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="#d9d9d9"
                android:fontFamily="@font/jalnan"
                android:text="게시글 삭제"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
